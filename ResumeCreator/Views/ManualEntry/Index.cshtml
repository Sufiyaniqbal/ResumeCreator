@model ResumeCreator.Models.ViewModel
@{
    ViewBag.Title = "Index";
    Layout = "";


}

<style>
    .timeline {
        padding-top: 40px;
        padding-left: 40px;
        background-color: #d0ebeb;
    }
    #timelineMain {
        background-color: #d0ebeb;
    }

    .timeline ul li {
        list-style: none;
        box-sizing: border-box;
        position: relative;
        width: 50%;
        padding-bottom:140px;          
    }

    .timeline ul li::before {
        content: '';
        position: absolute;
        height: 100%;
        width: 2px;
        background-color: lightseagreen;
        
    }

    .timeline ul li .text-info:before{
        content:'';
        position:absolute;
        height:30px;
        width:30px;
        background-color:#0dcaf0;
        border-radius:50%;
        left:-15px;
        

    }

    .timeline ul li .text-info {
        padding-left:30px;
    }

    .timeline ul li .content {
        padding-left: 10px;
        padding-top:50%;
    }

    .timeline ul li:last-child:before {
        content: '';
        position: absolute;
        height: 30px;
        width: 30px;
        background-color: #0dcaf0;
        border-radius: 50%;
        left: -15px;
    }
    #wholeinputcontent{
        background-image: url("https://cdn.woorise.com/template/wp-content/uploads/sites/62/2021/02/online-registration-background.png");
               
    }
    #navmain {
        background-color: #d0ebeb;
    }

    
    
    

</style>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume Creator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
</head>
<body>
    <nav class="navbar navbar-expand-lg sticky-lg-top" id="navmain">
        <div class="container-fluid ">
            <a class="navbar-brand fw-bold">Resume Creator</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
        
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">Link</a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search"  placeholder="Search" aria-label="Search" />
                    <button class="btn btn-outline-info" type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </form>
            </div>
        </div>
    </nav>
    <section class="container-fluid bg-light" >
        <div class="row">
            <div class="col-sm-3 bg-opacity-75" @*style="background-color:slategrey"*@ id="timelineMain">
                <div class="container">
                    <div class="timeline">
                        <ul>
                            <li>
                                <div class="text-info">
                                    <a href="#personalDetails" id="pd">Step 1</a>
                                </div>
                                <div class="content">
                                    <p>Add your personal details</p>
                                </div>
                            </li>

                            <li>
                                <div class="text-info">
                                    <a href="#educationalDetails" id="ed">Step 2</a>
                                </div>
                                <div class="content">
                                    <p>Add your Educational Details</p>
                                </div>
                            </li>

                            <li>
                                <div class="text-info">
                                    <a href="#experienceDetails" id="ed">Step 3</a>
                                </div>
                                <div class="content">
                                    <p>Add your Experience Details</p>
                                </div>
                            </li>

                            <li>
                                <div class="text-info">
                                    <a href="#finish" id="finishl">Finish</a>
                                </div>
                                <div class="content">
                                    <p></p>
                                </div>
                            </li>
                        </ul>                       
                    </div>
                </div>                                                
            </div>
            <div class="col-sm" id="wholeinputcontent">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })                    
                <section class="row py-2 scrollspy-example" data-bs-spy="scroll" data-bs-target="#pd" data-bs-smooth-scroll="true" id="personalDetails">
                    <p class="py-2 font-siberia fw-bold text-light">Personal Details</p>
                    <div class="col-auto font-monospace">
                        <div class="input-group">
                            @Html.LabelFor(m => m.personalDetails.Name, new { @class = "input-group-text" })
                            @Html.TextBoxFor(m => m.personalDetails.Name, new { @class = "form-control " })
                        </div>
                        <div class="input-group">
                            @Html.LabelFor(m => m.personalDetails.DOB, new { @class = "input-group-text" })
                            @Html.TextBoxFor(m => m.personalDetails.DOB, new { @class = "form-control" })
                        </div>
                        <div class="input-group">
                            @Html.LabelFor(m => m.personalDetails.Address, new { @class = "input-group-text" })
                            @Html.TextBoxFor(m => m.personalDetails.Address, new { @class = "form-control" })
                        </div>
                        <div class="input-group">
                            @Html.LabelFor(m => m.personalDetails.Country, new { @class = "input-group-text" })
                            @Html.TextBoxFor(m => m.personalDetails.Country, new { @class = "form-control" })
                        </div>
                        <div class="input-group">
                            @Html.LabelFor(m => m.personalDetails.State, new { @class = "input-group-text" })
                            @Html.TextBoxFor(m => m.personalDetails.State, new { @class = "form-control" })
                        </div>
                        <div class="input-group">
                            @Html.LabelFor(m => m.personalDetails.City, new { @class = "input-group-text" })
                            @Html.TextBoxFor(m => m.personalDetails.City, new { @class = "form-control" })
                        </div>
                        <div class="input-group">
                            @Html.LabelFor(m => m.personalDetails.ZipCode, new { @class = "input-group-text" })
                            @Html.TextBoxFor(m => m.personalDetails.ZipCode, new { @class = "form-control" })
                        </div>
                        <div class="input-group">
                            @Html.LabelFor(m => m.personalDetails.Email, new { @class = "input-group-text" })
                            @Html.TextBoxFor(m => m.personalDetails.Email, new { @class = "form-control" })
                        </div>
                        <div class="input-group">
                            @Html.LabelFor(m => m.personalDetails.PhoneNumber, new { @class = "input-group-text" })
                            @Html.TextBoxFor(m => m.personalDetails.PhoneNumber, new { @class = "form-control" })
                        </div>
                        <div class="input-group">
                            <input type="file" class="form-control" />
                        </div>
                    </div>
                </section>
                <section class="row py-2" data-bs-target="#pd" id="educationalDetails">

                    <p>Education</p>
                    @Html.TextBoxFor(m => m.educationDetails.Education1, new { @class = "form-control" })
                    @Html.TextBoxFor(m => m.educationDetails.Education2, new { @class = "form-control" })
                    <p>Education</p>
                    <p>Education</p>
                    <p>Education</p>
                    <p>Education</p>
                    <p>Education</p>
                </section>
                <section class="row py-2" data-bs-target="ed" id="experienceDetails">
                    <p>Experience</p>
                    <p>Experience</p>
                    @Html.TextBoxFor(m => m.experienceDetails.Experience1, new { @class = "form-control" })
                    @Html.TextBoxFor(m => m.experienceDetails.Experience2, new { @class = "form-control" })

                </section>
                <section class="row py-2" data-bs-target="finishl" id="finish">
                    
                    <p>save</p>
                    <input type="submit" value="Save" class="btn btn-default" />
                </section>
                }

            </div>
        </div>
               
    </section>



   
</body>
</html>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
